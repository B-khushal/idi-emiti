{
    // Python Configuration
    "python.defaultInterpreterPath": "./venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--ignore=E203,W503"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=88"
    ],
    "python.sortImports.args": [
        "--profile=black"
    ],
    // File Associations
    "files.associations": {
        "*.py": "python",
        "*.md": "markdown",
        "*.csv": "csv",
        "*.json": "json",
        "*.yaml": "yaml",
        "*.yml": "yaml"
    },
    // Editor Settings
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.rulers": [
        88
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": false,
    // File Explorer
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.py": "${capture}.py, ${capture}_test.py, ${capture}_tests.py, test_${capture}.py, tests_${capture}.py",
        "*.js": "${capture}.js, ${capture}.min.js, ${capture}.d.ts",
        "*.css": "${capture}.css, ${capture}.min.css, ${capture}.scss, ${capture}.sass",
        "*.html": "${capture}.html, ${capture}.htm",
        "*.md": "${capture}.md, ${capture}.markdown",
        "*.json": "${capture}.json, ${capture}.jsonc, ${capture}.json5",
        "*.yaml": "${capture}.yaml, ${capture}.yml",
        "*.csv": "${capture}.csv, ${capture}.tsv",
        "requirements*.txt": "requirements*.txt, requirements-*.txt, dev-requirements*.txt",
        "*.env": ".env, .env.local, .env.*.local"
    },
    // Search Settings
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": true,
        "**/env": true,
        "**/.venv": true,
        "**/.env": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/uploads": true,
        "**/data/*.csv": false
    },
    // Terminal Settings
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": [
                "-NoExit",
                "-Command",
                "cd '${workspaceFolder}'"
            ]
        }
    },
    // Git Settings
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // Extensions Recommendations
    "extensions.ignoreRecommendations": false,
    // Streamlit Specific Settings
    "python.analysis.extraPaths": [
        "./",
        "./venv/Lib/site-packages"
    ],
    // Debugging
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests"
    ],
    // File Watching
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/venv/**": true,
        "**/.git/**": true,
        "**/uploads/**": true,
        "**/data/*.csv": false
    },
    // Auto Save
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // Bracket Pair Colorization
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    // Indent Guides
    "editor.renderIndentGuides": true,
    // Word Wrap
    "editor.wordWrapColumn": 88,
    // Minimap
    "editor.minimap.showSlider": "always",
    // Scroll Beyond Last Line
    "editor.scrollBeyondLastLine": false,
    // Smooth Scrolling
    "editor.smoothScrolling": true,
    // Cursor Blinking
    "editor.cursorBlinking": "smooth",
    // Cursor Style
    "editor.cursorStyle": "line",
    // Multi Cursor Modifier
    "editor.multiCursorModifier": "alt",
    // Accept Suggestion On Enter
    "editor.acceptSuggestionOnEnter": "on",
    // Tab Completion
    "editor.tabCompletion": "on",
    // Parameter Hints
    "editor.parameterHints.enabled": true,
    // Suggest On Trigger Characters
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    // Snippet Suggestions
    "editor.snippetSuggestions": "top",
    // Word Based Suggestions
    "editor.wordBasedSuggestions": true,
    // Semantic Highlighting
    "editor.semanticHighlighting.enabled": true,
    // Inlay Hints
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    // Type Checking
    "python.analysis.typeCheckingMode": "basic",
    // Auto Import
    "python.analysis.autoImportCompletions": true,
    // Indexing
    "python.analysis.indexing": true,
    // Package Index
    "python.analysis.packageIndexDepths": [
        {
            "name": "streamlit",
            "depth": 2
        },
        {
            "name": "pandas",
            "depth": 2
        },
        {
            "name": "plotly",
            "depth": 2
        }
    ]
}